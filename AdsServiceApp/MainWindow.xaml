<Window x:Class="AdsServiceApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdsServiceApp"
        mc:Ignorable="d"
        Title="ProjectBySUS" Height="700" Width="800" WindowStartupLocation="CenterScreen" Closing="Window_Closing">
    <Grid>

        <Button Name="LoginButton" Content="Авторизация" Style="{StaticResource AccentButtonStyle}" VerticalAlignment="Top" HorizontalAlignment="Left" Width="100" Height="34" Click="LoginButton_Click" Margin="10,6,0,0"/>


        <Frame Name="MainFrame" HorizontalAlignment="Stretch" NavigationUIVisibility="Hidden"  VerticalAlignment="Stretch" Margin="0,40,0,0"/>


        <Button Name="BackButton" Content="Назад" Style="{StaticResource AccentButtonStyle}" VerticalAlignment="Top" HorizontalAlignment="Left" Width="100" Height="34" Click="BackButton_Click" Margin="10,6,0,0" Visibility="Collapsed"/>
    </Grid>
</Window>